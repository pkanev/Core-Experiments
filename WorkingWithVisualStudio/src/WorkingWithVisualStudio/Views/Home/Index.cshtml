@model IEnumerable<WorkingWithVisualStudio.Models.Product>
@{ ViewBag.Title = "Working with Visual Studio"; }

<h3>Products</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr><td>Name</td><td>Price</td></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@($"{p.Price:C2}")</td>
            </tr>
        }
    </tbody>
</table>